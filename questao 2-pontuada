#include <stdio.h>
#include <stdlib.h>

int main()
{
    float valor = 0;
    float desconto10 = 0;
    float desconto15 = 0;
    int semana = 0;
    float media = 0;
    float media2 = 0;
    
    printf("Informe o valor do produto: \n");
    scanf("%f",&valor);
    
    printf("Domingo \n");
    printf("Segunda \n");
    printf("Terça \n");
    printf("Quarta \n");
    printf("Quinta \n");
    printf("Sexta \n");
    printf("Sábado \n");
    printf("resposta: \n");
    scanf("%i",&semana);
    
    
system("cls || clear");

if(valor >= 100){
    switch(semana){

        case 1:
        desconto15 = (valor * 15)  / 100;
        media = valor - desconto15;
        printf("valor com desconto:%.2f \n",media);
        break;
        
        case 2: 
        printf("Segunda \n");
        case 3:
        printf("Terça \n");
        case 4:
        printf("Quarta \n");
        case 5:
        printf("Quinta \n");
        case 6:
        printf("Sexta \n");
        desconto10 = (valor * 10)  / 100;
        media2= valor - desconto10;
        printf("valor com desconto:%.2f \n",media2);
        break;
        
        case 7:
        desconto15 = (valor * 15)  / 100;
        media = valor - desconto15;
        printf("valor com desconto:%.2f \n",media);
        break;
         default:
         printf("opção inválida");
    
}
} else {
    printf("valor: %.2f \n",valor);
}


    
    return 0;
}
